<%= form_with(model: organization, data: { turbo:false }) do |form| %>
  <% if organization.errors.any? %>
        <% organization.errors.each do |error| %>
          <p style="color: red"><%= error.full_message %></p>
        <% end %>

    </div>
  <% end %>

  <div>
    <%= form.label :name %>:
    <%= form.text_field :name %>
  </div>
 <br>
  <div>
    <%= form.label :hourly_rate %>:
    $<%= form.number_field :hourly_rate, value: number_to_currency(form.object.hourly_rate.to_f, delimiter: ',', unit: ''), step: 0.01 %>
  </div>
<br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
