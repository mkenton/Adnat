<div class="card mb-3" style="width: 30rem" id="<%= dom_id organization %>">
  
    <p>
      <h2 class="ps-3"><%= organization.name %></h2>
    </p>

    <p>
      <strong class="ps-3">Hourly rate:</strong>
      <%= number_to_currency(organization.hourly_rate) %>
    </p>
    <div class="flex-row">    
    <span class="ps-3">
      <%= link_to "View", organization %>
    </span>
    <span class="ps-3">
      <%= link_to "Join", organization %>
    </span>
    </div>
</div>
